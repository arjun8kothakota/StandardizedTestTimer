<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arjunkothakota.standardizedtesttimer.PreviewActivity">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="1.0">

        <TextView
            android:id="@+id/section2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/section1"
            android:layout_marginTop="16dp"
            android:background="@color/fadeBlue"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="Writing"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/section1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@color/fadeBlue"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="Reading"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:layout_below="@+id/sat"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/section5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/section4"
            android:layout_marginTop="17dp"
            android:background="@color/fadeBlue"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="Essay"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/section4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/section3"
            android:layout_marginTop="21dp"
            android:background="@color/fadeBlue"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="Math (Calculator)"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <Button
            android:id="@+id/essayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/fadeBlue"
            android:text="Essay"
            android:textColor="@android:color/background_light"
            android:layout_alignBaseline="@+id/noEssayButton"
            android:layout_alignBottom="@+id/noEssayButton"
            android:layout_toStartOf="@+id/startButton" />

        <Button
            android:id="@+id/noEssayButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/fadeBlue"
            android:text="No Essay"
            android:textColor="@android:color/background_light"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/startButton" />

        <TextView
            android:id="@+id/startButton"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="7dp"
            android:background="#60b3e8"
            android:gravity="center"
            android:text="Start"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@android:color/background_light"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/sat"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/fadeBlue"
            android:gravity="center"
            android:text="SAT"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/section3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/section2"
            android:layout_marginTop="19dp"
            android:background="@color/fadeBlue"
            android:gravity="left|center"
            android:paddingLeft="5dp"
            android:text="Math (No Caluculator)"
            android:textColor="#ffffff"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/section3Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/section3"
            android:layout_alignBottom="@+id/section3"
            android:layout_alignStart="@+id/section4Time"
            android:text="20 min"
            android:textColor="@android:color/background_light"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/section4Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/section4"
            android:layout_alignBottom="@+id/section4"
            android:layout_alignStart="@+id/section1Time"
            android:text="55 min"
            android:textColor="@android:color/background_light"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/section1Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/section1"
            android:layout_alignBottom="@+id/section1"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"
            android:text="65 min"
            android:textColor="@android:color/background_light"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/section5Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/section5"
            android:layout_alignBottom="@+id/section5"
            android:layout_alignStart="@+id/section4Time"
            android:text="55 min"
            android:textColor="#ffffff"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/section2Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/section2"
            android:layout_alignBottom="@+id/section2"
            android:layout_alignStart="@+id/section3Time"
            android:text="35 min"
            android:textColor="@android:color/background_light"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView5"
            android:textColor="#fafafa" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
